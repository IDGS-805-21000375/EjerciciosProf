@page
@model Ejercicios_Razor_Pages.Pages.IMCAppModel
@{
    ViewData["Title"] = "Calculadora IMC";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f6f8;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0;
        padding: 0;
    }

    .container {
        background: white;
        margin-top: 50px;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    label {
        font-weight: bold;
        display: block;
        margin-top: 15px;
        color: #555;
    }

    input[type="number"] {
        width: 100%;
        padding: 8px 12px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 6px;
        box-sizing: border-box;
    }

    button {
        margin-top: 20px;
        width: 100%;
        background-color: #007bff;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    }

    .resultado {
        margin-top: 30px;
        text-align: center;
    }

    .resultado h2 {
        color: #333;
    }

    .resultado p {
        font-size: 18px;
        color: #555;
    }

    .resultado img {
        margin-top: 15px;
        border-radius: 10px;
    }
</style>

<div class="container">
    <h1>Calculadora de IMC</h1>

    <form method="post">
        <label for="peso">Peso (kg):</label>
        <input type="number" step="0.01" name="Peso" id="peso" required />

        <label for="altura">Altura (m):</label>
        <input type="number" step="0.01" name="Altura" id="altura" required />

        <button type="submit">Calcular</button>
    </form>

    @if (Model.IMC > 0)
    {
        <div class="resultado">
            <h2>Tu IMC es: @Model.IMC.ToString("0.00")</h2>
            <p>Clasificación: <strong>@Model.Clasificacion</strong></p>
            <img src="@Model.ImagenRuta" alt="Recomendación" width="300" />
        </div>
    }
</div>
